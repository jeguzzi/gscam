<launch>

  <arg name="name" default=""/>
  <arg name="src" default="test"/>

  <let name="tf_prefix" value="$(eval '\'$(var name)/\' if \'$(var name)\' else \'\'')"/>
  <arg name="frame_id" default="$(var tf_prefix)/camera_optical_link"/>

  <let name="source" value="videotestsrc pattern=ball is-live=true ! video/x-raw,width=1280,height=720 ! videoconvert" if="$(eval '\'$(var src)\' == \'test\'')"/>
  <let name="source" value="avfvideosrc ! video/x-raw,width=640,height=480 ! videoconvert" if="$(eval '\'$(var src)\' == \'avf\'')"/>

  <arg name="raw" default="0"/>
  <arg name="jpeg" default="0"/>
  <arg name="h264" default="0"/>
  <arg name="video" default="0"/>
  <arg name="udp" default="0"/>
  <arg name="file" default="0"/>
  <arg name="h265" default="0"/>

  <arg name="bitrate" default="5000"/>

  <arg name="sync_sink" default="true"/>
  <arg name="preroll" default="true"/>
  <arg name="use_gst_timestamps" default="true"/>
  <arg name="use_sensor_data_qos" default="true"/>
  <arg name="go_to_ready_when_paused" default="true"/>

  <node namespace="$(var name)" name="gscam" pkg="gscam" exec="gscam_multi_node" output="screen">
    <param name="camera_name" value="default"/>
    <param name="camera_info_url" value="package://gscam/examples/uncalibrated_parameters.ini"/>
    <param name="source" value="$(var source)"/>
    <!-- <param name="gscam_config" value=""/> -->
    <param name="frame_id" value="$(var frame_id)"/>
    <param name="sync_sink" value="$(var sync_sink)"/>
    <param name="preroll" value="$(var preroll)"/>
    <param name="raw" value="$(var raw)"/>
    <param name="jpeg" value="$(var jpeg)"/>
    <param name="h264" value="$(var h264)"/>
    <param name="h265" value="$(var h265)"/>
    <param name="video" value="$(var video)"/>
    <param name="udp" value="$(var udp)"/>
    <param name="file" value="$(var file)"/>
    <param name="use_gst_timestamps" value="$(var use_gst_timestamps)"/>
    <param name="use_sensor_data_qos" value="$(var use_sensor_data_qos)"/>
    <param name="go_to_ready_when_paused" value="$(var go_to_ready_when_paused)"/>

    <param name="ros_sinks">
      <param name="raw">
        <param name="config" value="videoconvert"/>
        <param name="caps" value="video/x-raw,format=BGR"/>
        <param name="topic" value="image_raw"/>
      </param>
      <param name="jpeg">
        <param name="config" value="videoconvert ! jpegenc quality=50"/>
        <param name="caps" value="image/jpeg"/>
        <param name="topic" value="image_raw/compressed"/>
      </param>
      <param name="h264">
        <param name="config" value='videoconvert ! vtenc_h264_hw max-keyframe-interval=1 realtime=true bitrate=$(var bitrate) allow-frame-reordering=false ! h264parse config-interval=-1 disable-passthrough=true'/> 
        <param name="caps" value="video/x-h264,parsed=true,stream-format=byte-stream,alignment=au"/>
        <param name="topic" value="image_raw/ffmpeg"/>
        <param name="encoding" value="libx264"/>
      </param>
      <param name="h265">
        <param name="config" value='videoconvert ! vtenc_h265_hw max-keyframe-interval=1 realtime=true bitrate=(var bitrate) allow-frame-reordering=false ! h265parse config-interval=-1 disable-passthrough=true'/> 
        <param name="caps" value="video/x-h265,parsed=true,stream-format=byte-stream,alignment=au"/>
        <param name="topic" value="image_raw/ffmpeg"/>
        <param name="encoding" value="hevc"/>
      </param>
    </param>
    <param name="sinks">
<!--       <param name="video">
        <param name="config" value="videoconvert ! glimagesink async=false"/>
      </param> -->
      <param name="udp">
        <param name="config" value="videoconvert ! x264enc tune=zerolatency ! rtph264pay ! udpsink host=localhost port=12345 async=false"/>
      </param>
<!--       <param name="file">
        <param name="config" value="videoconvert ! x264enc ! h264parse ! qtmux ! filesink location=test.mov async=false"/>
        <param name="eos" value="true"/>
      </param> -->
    </param>
  </node>

</launch>
