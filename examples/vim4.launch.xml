<launch>

  <let name="source" value="v4l2src device=/dev/media0 io-mode=mmap num-buffers=-1 ! video/x-raw,format=NV21,width=1920,height=1080,framerate=30/1 ! videoconvert"/>

  <arg name="raw" default="0"/>
  <arg name="jpeg" default="0"/>
  <arg name="h264" default="0"/>
  <arg name="h265" default="0"/>
  <arg name="udp" default="0"/>
  
  <node namespace="multi" name="gscam" pkg="gscam" exec="gscam_multi_node" output="screen">
    <param name="camera_name" value="default"/>
    <param name="camera_info_url" value="package://gscam/examples/uncalibrated_parameters.ini"/>
    <param name="source" value="$(var source)"/>
    <param name="frame_id" value="camera_optical_link"/>
    <param name="sync_sink" value="true"/>
    <param name="preroll" value="true"/>
    <param name="raw" value="$(var raw)"/>
    <param name="jpeg" value="$(var jpeg)"/>
    <param name="h264" value="$(var h264)"/>
    <param name="h265" value="$(var h265)"/>
    <param name="udp" value="$(var udp)"/>
    <param name="use_gst_timestamps" value="true"/>

    <param name="ros_sinks">
      <param name="raw">
        <param name="config" value="videoconvert"/>
        <param name="caps" value="video/x-raw,format=BGR"/>
        <param name="topic" value="image_raw"/>
      </param>
      <param name="jpeg">
        <param name="config" value="videoconvert ! amljpegenc"/>
        <param name="caps" value="image/jpeg"/>
        <param name="topic" value="image_raw/compressed"/>
      </param>
      <param name="h264">
        <param name="config" value='videoconvert ! amlvenc bitrate=8000 gop=1 ! h264parse config-interval=-1 disable-passthrough=true'/> 
        <param name="caps" value="video/x-h264,parsed=true,stream-format=byte-stream,alignment=au"/>
        <param name="topic" value="image_raw/ffmpeg"/>
        <param name="encoding" value="libx264"/>
      </param>
      <param name="h265">
        <param name="config" value='videoconvert ! amlvenc bitrate=8000 gop=1 ! h265parse config-interval=-1 disable-passthrough=true'/> 
        <param name="caps" value="video/x-h265,parsed=true,stream-format=byte-stream,alignment=au"/>
        <param name="topic" value="image_raw/ffmpeg"/>
        <param name="encoding" value="hevc"/>
      </param>
    </param>
    <param name="sinks">
      <param name="udp">
        <param name="config" value="videoconvert ! amlvenc bitrate=8000 ! rtph264pay ! udpsink host=192.168.1.124 port=12345 async=false"/>
      </param>
    </param>
  </node>

</launch>
